<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.mapper.UserMapper">

    <resultMap id="typeuser" type="com.example.entity.User">
        <result column="user_id" jdbcType="INTEGER" property="userId"/>
        <result column="user_pwd" jdbcType="String" property="userPwd"/>
        <result column="user_name" jdbcType="String" property="userName"/>
    </resultMap>


    <select id="selectById" resultMap="typeuser">
        select * from user where user_id = #{userId}
    </select>

    <select id="selectAll" resultMap="typeuser">
        select * from user;
    </select>

    <insert id="insertUser">
        insert into user values (#{userId},#{userId},#{userName})
    </insert>

    <delete id="deleteById" >
        delete from user where user_id = #{userId}
    </delete>

    <update id="updateById">
        update user set user_pwd =#{userPwd} where user_id=#{userId}
    </update>

</mapper>